# fly.toml app configuration file generated for edgi-cloud on 2025-08-04T11:56:19-04:00
#
# See https://fly.io/docs/reference/configuration/ for information about how to use this file.
#
# Replace <secret-key>, <default-password>, and <subdomain> with appropriate values before deploying.
#

app = 'edgi-cloud'
primary_region = 'ord'

[build]

[env]
  CSRF_SECRET_KEY = '<secret-key>'
  RESETTE_DATA_DIR = '/data'
  RESETTE_STATIC_DIR = '/app/static'
  PORTAL_DB_PATH = '/data/portal.db'
  DEFAULT_PASSWORD = '<default-password>'
  APP_URL = 'https://<subdomain>.fly.dev'

[[mounts]]
  source = 'edgi_data_volume'
  destination = '/data'

[http_service]
  internal_port = 8001
  force_https = true
  auto_stop_machines = 'stop'
  auto_start_machines = true
  min_machines_running = 1
  processes = ['app']
